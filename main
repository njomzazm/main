public abstract class Wohnobjekt {
    private String stadt;
    private double qm;
    private double preis;

    public String getStadt() {
        return stadt;
    }

    public void setStadt(String stadt) {
        this.stadt = stadt;
    }

    public double getPreis() {
        return preis;
    }

    public void setPreis(double preis) {
        this.preis = preis;
    }

    public double getQm() {
        return qm;
    }

    public void setQm(double qm) {
        this.qm = qm;
    }
}

public class Wohnung extends Wohnobjekt {
    private String aktuellerMieter;

    public String getAktuellerMieter() {
        return aktuellerMieter;
    }

    public void setAktuellerMieter(String aktuellerMieter) {
        this.aktuellerMieter = aktuellerMieter;
    }
}

public class Wohngemeinschaft extends Wohnobjekt{
    private int anzahlPersonen;
    private String[] bewohner;


    public void addBewohner(String person){
        for (int i =0; i < bewohner.length; i++) {
            if (bewohner[i].equals("")) {
                bewohner[i] = person;
                break;
            }
        }
    }

    public int getAnzahlPersonen() {
        return anzahlPersonen;
    }

    public void setAnzahlPersonen(int anzahlPersonen) {
        this.anzahlPersonen = anzahlPersonen;
    }

    public String[] getBewohner() {
        return bewohner;
    }

    public void setBewohner(String[] bewohner) {
        this.bewohner = bewohner;
    }
}

public class WohnungsApp {
    public static void main(String[] args) {


        Wohnung objekt0 = new Wohnung();
        objekt0.setStadt("Bochum");
        objekt0.setQm(100);
        objekt0.setPreis(600);
        objekt0.setAktuellerMieter("Manuel");

        Wohngemeinschaft objekt1 = new Wohngemeinschaft();
        objekt1.setStadt("Bochum");
        objekt1.setQm(120);
        objekt1.setPreis(800);
        objekt1.setAnzahlPersonen(3);
        objekt1.setBewohner(new String[]{"Leonie, Jasmin"});
        objekt1.addBewohner("Diellza");

        Wohnung objekt2 = new Wohnung();
        objekt2.setStadt("Bochum");
        objekt2.setQm(140);
        objekt2.setPreis(1000);
        objekt2.setAktuellerMieter("Sarah");

        Wohnobjekt[] array = new Wohnobjekt[]{objekt0, objekt1, objekt2};

        sucheWohnungen(array, "Bochum");


    }

    public static void sucheWohnungen(Wohnobjekt[] array, String stadt) {
        System.out.println("Stadt: " + stadt);
        for (int i = 0; i < array.length; i++) {
            if (array[i] != null) {
                if (array[i].getStadt().equals(stadt))
                    if (array[i] instanceof Wohnung) {
                        System.out.println("Wohnung:");
                        System.out.println("Quadratmeter: " + array[i].getQm() + ", Preis: " + array[i].getPreis() + "€" + ", aktueller Mieter: " + ((Wohnung) array[i]).getAktuellerMieter());
                    } else if (array[i] instanceof Wohngemeinschaft) {
                        System.out.println("WG:");
                        System.out.println("Quadratmeter: " + array[i].getQm() + ", Preis: " + array[i].getPreis() + "€" + ", Anzahl an Personen: " + ((Wohngemeinschaft) array[i]).getAnzahlPersonen());
                        for (i = 0; i < ((Wohngemeinschaft) array[i]).getBewohner().length; i++) {
                            System.out.print("Bewohner Nr. " + (i + 1) + ": " + ((Wohngemeinschaft) array[i]).getBewohner()[i] + ", ");
                        }
                    }
            }
        }
    }
}

